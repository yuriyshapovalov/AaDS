<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTarget="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<BinaryPath>bin\csharp\</BinaryPath>
	</PropertyGroup>

	<ItemGroup>
		<!-- Sorting -->
		<CSFile Include="..\sorting\csharp\*.cs" />
	</ItemGroup>
	
	<Target Name="Build">
		<MakeDir Directories="$(BinaryPath)" Condition="!Exists('$(BinaryPath)')" />
		<Message Text="Start building" />
		<Csc Sources="@(CSFile)" TargetType="library" OutputAssembly="$(BinaryPath)Sorting.dll" />
	</Target>

	<Target Name="Clear">
		<Delete Files="$(BinaryPath)*.cs" />
	</Target>

	<Target Name="Rebuild" DependsOnTargets="Clean;Build" />
</Project>

<project name="AaDS" default="build">

  <target name="make.dirs">
    <mkdir dir="bin/java" />
    <mkdir dir="bin/java/class" />
  </target>
  
  <target name="build" description="Do the build" depends="make.dirs">
    <javac includeantruntime="false" destdir="bin/java/class">
        <src path="../java/sorting"/>
    </javac>
  </target>

  <target name="clean">
    <delete dir="bin/java" />
  </target>
  
</project>
